{
	"compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
	"esModuleInterop": true,
	"composite": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "hasContent.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
  ]
}